<h2>Leave Allocation </h2>
@{
    <div class="card" style="width:18rem;">
        <ul class="list-group list-group-flush">
            @foreach (var item in Model.leaveAllocations)
            {
                <li class="list-group-item">
                    <h6>@item.LeaveType.Name <span class="badge badge-secondary">@item.NumberOfDays</span></h6> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                        <i class="fade fa-pencil"></i> Edit 
                    </a> 
                </li>
            }
        </ul>
    </div>
